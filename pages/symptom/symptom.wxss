@import "../../component/search/search.wxss";
@import "../../component/restart/restart.wxss";

.pad {
  padding-top: 100rpx;
  padding-bottom: 100rpx;
}

.cont {
  width: 100%;
  height: 100%;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  -webkit-flex-direction: row;
  border-top: 1px solid #eaecee;
}

.cont .leftTab {
  width: 250rpx;
  height: 100%;
}

.cont .leftTab .list {
  height: 98rpx;
  line-height: 98rpx;
  font-size: 32rpx;
  text-align: center;
  border-bottom: 1px solid #eaecee;
  /*position:relative;*/
  border-right: 1px solid #eaecee;
}

.cont .leftTab .list.active {
  color: #3d83b8;
  border-right: none;
}

.cont .rightCont {
  width: 499rpx;
  height: 100%;
}

.cont .rightCont .tag {
  width: 40%;
  margin: 4%;
  height: 70rpx;
  font-size: 32rpx;
  line-height: 70rpx;
  text-align: center;
}

.cont .rightCont .tag .active {
  color: #3d83b8;
  border: 2rpx solid #3d83b8;
  border-radius: 10rpx;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  color: #fff;
  z-index: 99;
}

.footer .cart {
  width: 494rpx;
  height: 100%;
  font-size: 28rpx;
  background: rgba(42, 63, 84, 0.9);
  padding-left: 46rpx;
}

.footer .cart text {
  color: #41b8b0;
  font-size: 40rpx;
}

.footer .sure {
  width: 300rpx;
  background: #41b8b0;
  font-size: 34rpx;
  text-align: center;
}

.modal .mask {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(42, 63, 84, 0.3);
  z-index: 98;
}

.modal .cont {
  padding: 30rpx 40rpx;
  background: #fff;
  position: fixed;
  bottom: 100rpx;
  width: 100%;
  box-sizing: border-box;
}

.modal .cont .choice {
  font-size: 32rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 30rpx 0 22rpx;
  background: #41b8b0;
  color: #fff;
  margin: 10rpx 20rpx;
  border-radius: 10rpx;
}

.modal .cont.show {
  animation: maskShow 0.2s linear forwards;
}

@keyframes maskShow {
  0% {
    height: 0;
  }

  100% {
    height: 410rpx;
  }
}

@-webkit-keyframes maskShow {
  0% {
    height: 0;
  }

  100% {
    height: 410rpx;
  }
}

.modal .mask.show {
  animation: maskshow 0.2s linear forwards;
}

@keyframes maskshow {
  0% {
    display: block;
    opacity: 0.3;
  }

  100% {
    opacity: 1;
  }
}

@-webkit-keyframes maskshow {
  0% {
    display: block;
    opacity: 0.3;
  }

  100% {
    opacity: 1;
  }
}
